<li class="blog-post articles-item">
    <!-- Title -->
    <h2 class="blog-post-title">
        <a href="<%- config.root %><%- item.path %>">
            <%- item.title %>
        </a>
    </h2>
    <!-- Date and Author -->
    <p class="blog-post-meta">
        <%= item.date.format(config.date_format) %>
            <% if(item.author) { %>
                by
                <%- item.author %>
                    <% } %>
    </p>
    <% if(item.meta && item.meta.desc) { %>
        <%- item.meta.desc %>
            <% } else { %>
                <%- item.content.substring(0, 200) %>...
                    <% } %>
</li>